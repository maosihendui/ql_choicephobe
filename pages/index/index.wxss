.container {
  /* 页面上下左右留出20px的空白 */
  padding: 20px;
  background-color: #fff;
}

.box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2px solid #ccc;
  border-radius: 5px;
  height: 60px;
}


/* picker部分样式 */
.box .input-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(255, 255, 255);
  overflow: hidden;
}
.box .input-box picker .picker {
  display: inline-block;
  width: 190px;
  padding-left: 8px;
}

/* 图标样式 */
.icon {
  width: 16px;
  height: 16px;
  margin:0 8px;
}
.icon-sanjiao {
  position: absolute;
  right: 140px;
  margin-top: 4px;
  margin-right: 16px;
}
.box .btns {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 26px;
  padding-left: 10px;
  border-left: 1px solid rgb(187, 185, 185);
}
/*textarea输入框样式*/
.textarea-box {
  margin-top: 40px;
  border-bottom: 1px solid #ccc;
}
.textarea-box textarea {
  font-size: 16px;
  padding: 5px;
  width: 280px;
}

/* 开始按钮 */
.start-btn {
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#A7C2F3fa;
  color: #fff;
  padding: 14px 24px;
  border-radius: 30px;
  box-shadow: 0 2px 8px 3px #e4e3e3;
}
/* Dialog */
.content {
  margin: 10px 20px;
}
.content .tip {
  font-size: 14px;
  margin-bottom: 10px;
  color: #888888;
}
.content .input {
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
